#include <stdio.h>


void Matrix(int matrix[][3], int n, int m) {
    
    printf(" %dx%d:\n", n, m);
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            printf("%4d", matrix[i][j]);
        }
        printf("\n");
    }

    
    int found = 0;
    for (int j = 0; j < m; j++) {
        int a = 0;
        int sum = 0;

        for (int i = 0; i < n; i++) {
            if (matrix[i][j] < 0) a = 1;
            sum += matrix[i][j];
        }

        if (a) {
            printf("%d: %d\n", j + 1, sum);
            found = 1;
        }
    }
}

int main() {
   
    int matrix[3][3] = {
        {10,  20, -5},
        {15, -25, 30},
        {40,  50, 60}
    };

    int n = 3;
    int m = 3;

   
    Matrix(matrix, n, m);

    return 0;
}
