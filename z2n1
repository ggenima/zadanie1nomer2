// Найти сумму элементов в тех столбцах, которые содержат хотя бы один отрицательный элемент.

#include <stdio.h>


int main() {
    // Квадратная матрица 3x3
    int matrix[3][3] = {
        {10,  20, -5},
        {15, -25, 30},
        {40,  50, 60}
    };

    int n = 3;
    int m = 3;

    printf(" %dx%d:\n", n, m);
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            printf("%4d", matrix[i][j]);
        }
        printf("\n");
    }

    int found = 0;

    for (int j = 0; j < m; j++) {
        int has_negative = 0;
        int sum = 0;

        for (int i = 0; i < n; i++) {
            if (matrix[i][j] < 0) has_negative = 1;
            sum += matrix[i][j];
        }

        if (has_negative) {
            printf("%d\n", j + 1, sum);
            found = 1;
        }
    }
    return 0;
}
